<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Clínica Sacramento"
        android:id="@+id/txtNome"
        android:textSize="22dp"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="false"
        android:gravity="bottom" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnMapa"
        android:src="@mipmap/buscar_hospital"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/btnConsultar"
        android:layout_alignStart="@+id/btnConsultar"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Rua João Alves júnior das Rosas, 8523R uaa sdas"
        android:id="@+id/txtEndereco"
        android:textSize="15dp"
        android:textColor="#555555"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="25dp" />
</FrameLayout>
