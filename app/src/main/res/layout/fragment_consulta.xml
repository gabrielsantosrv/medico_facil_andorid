<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.medicofacil.medicofacilapp.ConsultaFragment">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstConsultas"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_color"
        android:layout_below="@+id/srcPesquisa" />

    <SearchView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/srcPesquisa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>
